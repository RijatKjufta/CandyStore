@model Candystore.Entities.CoffeTypes

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CoffeTypes</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CoffeProduct" class="control-label"></label>
                <input asp-for="CoffeProduct" class="form-control" />
                <span asp-validation-for="CoffeProduct" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="imgURL" hidden class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        <div class="row form-group">
            <div class="col-12">
                <label>Upload Coffe Image</label>
            </div>
            <div class="col-12">
                <input type="file" #file accept="image/*" id="photoUploadCoffe" />
                <button class="btn btn-custom btn-block" id="uploadPhotoCoffe">Upload Image</button>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

